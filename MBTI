        };

        // 存储用户答案
        let userAnswers = {
            type: '', // 'e' 或 'i'
            answers: [] // 存储每题选择的选项
        };

        // 开始页面按钮
        document.getElementById('start-e-btn').addEventListener('click', () => {
            userAnswers.type = 'e';
            userAnswers.answers = [];
            document.getElementById('start-screen').classList.add('hidden');
            document.getElementById('e-test').classList.remove('hidden');
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });

        document.getElementById('start-i-btn').addEventListener('click', () => {
            userAnswers.type = 'i';
            userAnswers.answers = [];
            document.getElementById('start-screen').classList.add('hidden');
            document.getElementById('i-test').classList.remove('hidden');
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });

        // 通用的题目导航函数
        function setupQuestionNavigation(type) {
            let currentQuestion = 1;
            const totalQuestions = 7;
            const prevBtn = document.getElementById(`${type}-prev-btn`);
            const submitBtn = document.getElementById(`${type}-submit-btn`);
            const progressBar = document.getElementById(`${type}-progress-bar`);
            const currentQuestionEl = document.getElementById(`${type}-current-question`);
            
            // 更新UI的函数
            function updateUI() {
                // 更新进度条
                const progress = (currentQuestion / totalQuestions) * 100;
                progressBar.style.width = `${progress}%`;
                currentQuestionEl.textContent = currentQuestion;
                
                // 更新上一题按钮状态
                if (currentQuestion === 1) {
                    prevBtn.classList.add('opacity-50', 'cursor-not-allowed');
                    prevBtn.disabled = true;
                } else {
                    prevBtn.classList.remove('opacity-50', 'cursor-not-allowed');
                    prevBtn.disabled = false;
                }
                
                // 最后一题显示提交按钮
                if (currentQuestion === totalQuestions) {
                    submitBtn.classList.remove('hidden');
                } else {
                    submitBtn.classList.add('hidden');
                }
                
                // 显示当前题目，隐藏其他题目
                document.querySelectorAll(`.${type}-question`).forEach(question => {
                    if (parseInt(question.dataset.question) === currentQuestion) {
                        question.classList.remove('hidden');
                        question.classList.add('active');
                    } else {
                        question.classList.add('hidden');
                        question.classList.remove('active');
                    }
                });
            }
            
            // 上一题按钮
            prevBtn.addEventListener('click', () => {
                if (currentQuestion > 1) {
                    currentQuestion--;
                    updateUI();
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                }
            });
            
            // 提交按钮
            submitBtn.addEventListener('click', () => {
                // 计算结果 - 找出出现次数最多的选项
                const optionCounts = { A: 0, B: 0, C: 0, D: 0, E: 0 };
                userAnswers.answers.forEach(option => {
                    optionCounts[option]++;
                });
                
                let maxCount = 0;
                let resultOption = 'A';
                
                for (const option in optionCounts) {
                    if (optionCounts[option] > maxCount) {
                        maxCount = optionCounts[option];
                        resultOption = option;
                    }
                }
                
                // 显示结果
                const results = type === 'e' ? testData.eResults : testData.iResults;
                const result = results[resultOption];
                
                document.getElementById('result-title').textContent = 
                    `${type === 'e' ? 'E人' : 'I人'}的香氣性格`;
                document.getElementById('result-type').textContent = result.title;
                document.getElementById('result-description').innerHTML = result.description.replace(/\n/g, '<br>');
                document.getElementById('result-image').src = result.image;
                document.getElementById('result-image').alt = result.title;
                
                // 隐藏测试页面，显示结果页面
                document.getElementById(`${type}-test`).classList.add('hidden');
                document.getElementById('results').classList.remove('hidden');
                window.scrollTo({ top: 0, behavior: 'smooth' });
            });
            
            // 选项按钮点击事件 - 选择后自动跳转到下一题
            document.querySelectorAll(`.${type}-question .option-btn`).forEach(btn => {
                btn.addEventListener('click', function() {
                    // 清除同题目的其他选中状态
                    const questionElement = this.closest(`.${type}-question`);
                    questionElement.querySelectorAll('.option-btn').forEach(opt => {
                        opt.classList.remove('selected');
                    });
                    
                    // 设置当前选项为选中状态
                    this.classList.add('selected');
                    
                    // 保存答案
                    const questionNum = parseInt(questionElement.dataset.question);
                    const option = this.dataset.option;
                    
                    // 更新或添加答案
                    if (userAnswers.answers[questionNum - 1]) {
                        userAnswers.answers[questionNum - 1] = option;
                    } else {
                        userAnswers.answers.push(option);
                    }
                    
                    // 如果不是最后一题，自动跳转到下一题
                    if (currentQuestion < totalQuestions) {
                        // 添加短暂延迟，让用户看到选择效果
                        setTimeout(() => {
                            currentQuestion++;
                            updateUI();
                            window.scrollTo({ top: 0, behavior: 'smooth' });
                        }, 300);
                    }
                });
            });
        }

        // 设置E人和I人测试的导航
        setupQuestionNavigation('e');
        setupQuestionNavigation('i');

        // 重新测试按钮
        document.getElementById('retake-test').addEventListener('click', () => {
            document.getElementById('results').classList.add('hidden');
            document.getElementById('start-screen').classList.remove('hidden');
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });

        // 分享按钮功能
        document.getElementById('share-test').addEventListener('click', () => {
            // 获取当前页面URL作为分享链接
            const shareUrl = window.location.href;
            
            // 复制到剪贴板
            navigator.clipboard.writeText(shareUrl).then(() => {
                // 显示复制成功提示
                const originalText = document.getElementById('share-test').innerHTML;
                document.getElementById('share-test').innerHTML = '<i class="fa fa-check mr-2"></i> 連結已複製！';
                
                // 3秒后恢复原始文本
                setTimeout(() => {
                    document.getElementById('share-test').innerHTML = originalText;
                }, 3000);
            }).catch(err => {
                console.error('无法复制: ', err);
                alert('複製失敗，請手動複製網址');
            });
        });

        // 滚动时导航栏效果
        window.addEventListener('scroll', () => {
            const header = document.querySelector('header');
            if (window.scrollY > 50) {
                header.classList.add('py-2', 'shadow');
                header.classList.remove('py-4');
            } else {
                header.classList.add('py-4');
                header.classList.remove('py-2', 'shadow');
            }
        });
    </script>


    </body></html>
